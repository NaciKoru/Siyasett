@section scripts {
    <link href="~/lib/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/limonte-sweetalert2/sweetalert2.min.js"></script>
    <script>function feedbackSend() {
            var feedback = {
                Name: $('#contactFormName').val(),
                LastName: $('#contactFormLastname').val(),
                Email: $('#contactFormEmail').val(),
                Topic: $('#contactFormSubject').val(),
                Text: $('#contactFormMessage').val(),
                Title: "İletişim",
                PageUrl: window.location.href,
            }
            $('#btnFeedback').prop('disabled', true);
            blockUI();
            $.post('/parties/getfeedback', { obj: feedback }).done((response) => {
                unblockUI();
                Swal.fire("Geri Bildirim", "Talebiniz alınmıştır,teşekkür ederiz", "success");
                $('#btnFeedback').prop('disabled', false);

                $('#contactFormName').val("");
                $('#contactFormLastname').val("");
                $('#contactFormEmail').val("");
                $('#contactFormSubject').val("");
                $('#contactFormMessage').val("");
            });
        }
        function blockUI(message) {

            $.blockUI({ message: '<img src="/images/loading.gif" /><br/>' + (message ? message : "") });

        }

        function unblockUI() {

            $.unblockUI();

        }</script>
}