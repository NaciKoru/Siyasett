                            <div class="form-group col-lg-12 col-md-12">
                                <input type="text" name="contactFormSubject" id="contactFormSubject" placeholder="@Localize("text_subject")" required>
                            </div>
                            <div class="form-group col-lg-12 col-md-12">
                                <textarea name="contactFormMessage" id="contactFormMessage" placeholder="@Localize("text_message")"></textarea>
                            </div>
                            <div class=" col-lg-12 col-md-12">
                                <input type="checkbox" name="contactPersonalInformation" id="contactPersonalInformation" />
