@model LoginViewModel
@{
    ViewData["Title"] = Localize("login.popup.loginbutton");
}
<style>
.login-box {
    background: #fff;
    border: 1px solid #ddd;
}

.input-icon {
    position: absolute;
    top: 10px;
    left: 15px;
    color: #888;
    font-size: 16px;
}

.form-control {
    height: 44px;
    font-size: 15px;
    border-radius: 10px;
    padding-left: 45px !important;
}

.btn-primary {
    background-color: #1D3D55;
    border-color: #1D3D55;
    border-radius: 10px;
    font-weight: 600;
}

.btn-primary:hover {
    background-color: #163144;
    border-color: #163144;
}

.btn-outline-primary {
    border-color: #1D3D55;
    color: #1D3D55;
    border-radius: 10px;
    font-weight: 600;
}

.btn-outline-primary:hover {
    background-color: #1D3D55;
    color: white;
}

.info-box h4 {
    font-weight: bold;
    color: var(--pc);
}

.info-box p {
    font-size: 15px;
}
</style>

<section class="login-page-section" style="padding: 60px 0;">
    <div class="container">
        <div class="row justify-content-center">

            <!-- Login Box -->
            <div class="col-md-6 col-lg-5">
                <div class="login-box shadow p-4 rounded-4">
                    <h3 class="text-center mb-4">@Localize("login0")</h3>

                    <form method="post">
                        <div class="form-group mb-3 position-relative">
                            <i class="fas fa-envelope input-icon"></i>
                            <input type="email" class="form-control ps-5" asp-for="Eposta" placeholder="@Localize("login7")" required />
                        </div>

                        <div class="form-group mb-3 position-relative">
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password" class="form-control ps-5" asp-for="Sifre" placeholder="@Localize("login8")" required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 mt-2">
                            @Localize("login.popup.loginbutton")
                        </button>
                    </form>

                    <div class="text-center mt-3">
                        <a href="/forgotpassword">@Localize("login6")</a>
                    </div>
                </div>
            </div>

            <!-- Register Side -->
            <div class="col-md-6 col-lg-5 mt-4 mt-lg-0 d-flex align-items-center">
                <div class="info-box ps-lg-5">
                    <h4>@Localize("login1")</h4>
                    <p>@Localize("login2")</p>
                    <a href="/register" class="btn btn-outline-primary mt-2">@Localize("login3")</a>
                </div>
            </div>

        </div>
    </div>
</section>
