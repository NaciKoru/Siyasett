<section class="app-section" style="margin-bottom:70px;">
    <div class="container">

        <div class="row">
            <div class="col-md-12 col-lg-7">
                <div id="contact-form-container">
                    <h2>@Localize("login0")<span></span></h2>
                    <div id="contact-form-result">
                        <p>@Html.ValidationSummary("", new { @class = "text-danger" })</p>
                    </div>
                    @if (Model != null)
                    {


                        <form class="nobottommargin" id="template-contactform" name="template-contactform" method="post" novalidate="novalidate">

                            <input type="hidden" asp-for="Token" />
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" asp-for="Email" readonly placeholder="@Localize("register5")">
                                <label for="Eposta">@Localize("register5")</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" asp-for="Password" placeholder="@Localize("register7")">
                                <label for="Password">@Localize("register7")</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" asp-for="PasswordConfirm" placeholder="@Localize("register8")">
                                <label for="PasswordConfirm">@Localize("register8")</label>
                            </div>

                            <p class="text-center">
                                <button class="theme-btn btn-style-one" type="submit">@Localize("text_send")</button>
                            </p>
                        </form>
                    }
                </div>

            </div>
